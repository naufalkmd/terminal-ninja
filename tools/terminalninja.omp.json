{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 4,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "background": "#003543",
          "foreground": "#00c983",
          "template": " {{ .Icon }} {{ .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#DA627D",
          "foreground": "#ffffff",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": "\\",
            "home_icon": "\ueb06",
            "style": "full"
          },
          "template": " <#000>\uf07b \uea9c</> {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#FCA17D",
          "foreground": "#ffffff",
          "properties": {
            "branch_icon": " <#ffffff>\ue0a0 </>",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " \u279c ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#78C3FB",
          "foreground": "#000000",
          "properties": {
            "fetch_status": true
          },
          "template": "{{ if .Working.Untracked }} \uf457 {{ .Working.Untracked }}{{ end }}{{ if .Staging.Changed }} \uf058 {{ .Staging.Changed }}{{ end }}{{ if .Working.Modified }} \uf044 {{ .Working.Modified }}{{ end }}{{ if .Working.Deleted }} \uf057 {{ .Working.Deleted }}{{ end }} "
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#83769c",
          "foreground": "#ffffff",
          "properties": {
            "always_enabled": true,
            "threshold": 500
          },
          "template": " \ueba2 {{ .FormattedMs }} "
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#33658A",
          "foreground": "#ffffff",
          "properties": {
            "time_format": "3:04 PM"
          },
          "template": " \uf017 {{ .CurrentDate | date .Format }} "
        },
        {
          "type": "status",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "background": "#2e9599",
          "background_templates": [
            "{{ if gt .Code 0 }}#ff0000{{ end }}"
          ],
          "foreground": "#ffffff",
          "properties": {
            "always_enabled": true
          },
          "template": " {{ if gt .Code 0 }}\uf421{{ else }}\uf469{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#cd5e42",
          "template": "\ue3bf "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#CD4277",
          "template": " <#45F1C2><b>\u26a1</b></><b>{{ .UserName }}</b> <#26C6DA>\u276f</><#45F1C2>\u276f</> "
        }
      ]
    }
  ]
}
